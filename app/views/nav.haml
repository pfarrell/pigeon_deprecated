%div.nav{:align=>"right"}
-if @next != ''
  %form{:id=>"search_form", :action=>"#{url_for('/u/' + params["user"] + '/search')}", :method=>"post"}
    -if @prev > -1
      %a{:href=>"#{@prev}"}
        %span.page
          <
    %span
      %input{:type=>"search", :name=>"search", :results=>"5"}
    %span
      %input{:type=>"submit", :value=>"?"}
      %a{:href=>"#{@next}"}
        %span.page
          >
    -if !current_user.nil?
      %span.page#edit
        Edit
      
-elsif !@search.nil? && !params["user"].nil?
  %form{:action=>"#{url_for('/u/' + params["user"] + '/search')}", :method=>"post"}
    %a{:href=>"#{url_for('/u/' + params["user"] + '/')}"}
      %span.page
        <
    %span
      %input{:type=>"search", :name=>"search", :results=>"5"}
    %span
      %input{:type=>"submit", :value=>"?"}
-elsif !@search.nil?
  %form{:action=>"#{url_for('/search')}", :method=>"post"}
    %a{:href=>"#{url_for('/')}"}
      %span.page
        <
    %span
      %input{:type=>"search", :name=>"search", :results=>"5"}
    %span
      %input{:type=>"submit", :value=>"?"}
-else
  %form{:action=>"#{url_for('/search')}", :method=>"post"}
    %span
      %input{:type=>"search", :name=>"search", :results=>"5"}
    %span
      %input{:type=>"submit", :value=>"?"}


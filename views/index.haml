%div.container.main
  %div#last
  -prevdate = ''
  -@links.each do |link|
    -currdate = link.updated_at.strftime('%a %b %d, %Y')
    -if currdate != prevdate
      %div.datesec
        =currdate
    %div.link
      -if !link.thumb_url.nil?
        %img{:src=>"#{link.thumb_url}"}
      %a{:href=>"#{link.local_url}", :title=>"#{link.remote_url}"}
        #{link.title}
    -prevdate = currdate
  %div.paging
    -if @prev > 0
      %span.page
        %a{:href=>"#{url_for '/'}#{@prev}"}
          <<
    -if @next != ''
      %span.page
        %a{:href=>"#{url_for '/'}#{@next}"}
          >>
